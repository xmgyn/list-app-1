<UserControl x:Class="List_App.View.ListInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:List_App.View"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid Background="White">
        <Border BorderThickness="2" CornerRadius="5,5,5,5" BorderBrush="LightSteelBlue" >
        <DockPanel Margin="5,5,5,5">
            <CheckBox x:Name="Check" VerticalAlignment="Center"></CheckBox>
            <TextBlock x:Name="Textbox" FontSize="15" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding Value}" Margin="5,5,5,5" />
        </DockPanel>
        </Border>
    </Grid>
</UserControl>
